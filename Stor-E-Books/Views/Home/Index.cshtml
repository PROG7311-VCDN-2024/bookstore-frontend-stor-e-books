@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h5 class="display-4"><strong><em>Stor-E-Books</em></strong></h5>
    

</div>
<div class="marquee-container">
    <marquee behavior="scroll" direction="left">
        <span>Welcome to Store-E-Books! Get your favorite books at unbeatable prices!Sign up for exclusive deals and offers</span>
    </marquee>
</div>


<div class="d-flex justify-content-end mt-4">
    <form action="#" method="GET" class="form-inline">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>
<div class="my-2">
    <form class="row eow=cols-lg-auto g-3 align-items-center">
        <div class="cols-12">
            <label class="visually-hidden" for="inlineFormSelectPref">Genres</label>
            <select class="form-select" id="genreId">
                <option selected>Choose...</option>
                <option value="1">Action</option>
                <option value="2">Horror</option>
                <option value="3">Romance</option>
                <option value="4">ScienceFiction</option>
                </select>
        </div>
    </form>

</div>
<div class="col-12">
    <label class=" visually-hidden" for="inlineFormInputGroupUsername">search by tittle</label>
    <div class="input-group">
        <div class="input-group-text">
            <input type="text" class="form-control" id="sterm" placeholder="search by tittle" >
            
        </div>
    
</div>

<div class="w-100 mt-4 d-flex-wrap">
    @foreach(var book in Model)
    {
            <div class="card mx-2 mb-4" style="width: 16rem;">
                @if (string.IsNullOrEmpty(book.Image))
                {
                    <img src="/images/BookNoPhoto.png" class="card-img-top" alt=" ..." />
                }
                else
                {
                    <img src="/images/@book.Image" class="card-img-top" alt=" ..." />
                }
                <img src =" " class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@book.BookName</h5>
                <P class=" card-text">
                Genre:@book.GenreName

                Price:@book.Price
                <p/>
                <a href="#" class="btn btn-primary">Add to Cart</a>
            </div>
            </div>
    }
</div>
